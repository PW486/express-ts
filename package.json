{
  "name": "express-ts-starter",
  "version": "1.5.1",
  "description": "Quick Start TypeScript Express",
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js ./dist/server.js",
    "build": "rm -rf ./dist && tsc",
    "test": "jest --forceExit --detectOpenHandles --runInBand",
    "typeorm": "node -r ./tsconfig-paths-bootstrap.js ./node_modules/typeorm/cli.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "format": "prettier --config .prettierrc --check src/**/*",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:node\"",
    "watch:ts": "tsc -w --sourceMap",
    "watch:node": "nodemon --inspect",
    "clean": "./scripts/clean-package.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PW486/express-ts-starter.git"
  },
  "author": "DONGGEON LIM <ooqwe486@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.3.1",
    "helmet": "^3.20.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.8.0",
    "typeorm": "^0.2.18",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-jwt": "0.0.42",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.18",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/morgan": "^1.7.36",
    "@types/multer": "^1.3.8",
    "@types/node": "^12.7.2",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
