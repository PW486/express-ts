{
  "name": "express-ts",
  "version": "0.0.1",
  "description": "Quick Start BackEnd (Node/TypeScript/Express/TypeORM)",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "prettier": "prettier --config .prettierrc --write \"src/**/*\"",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PW486/express-ts.git"
  },
  "author": "PW486",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "joi": "^14.3.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "pg": "^7.10.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.16",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/helmet": "0.0.43",
    "@types/joi": "^14.3.2",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^11.13.7",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.11",
    "prettier": "1.17.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3"
  }
}
