{
  "name": "express-ts-starter",
  "version": "1.3.2",
  "description": "Quick Start TypeScript Express",
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js ./dist/server.js",
    "build": "rm -rf ./dist && tsc",
    "pretest": "npm run build",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "format": "prettier --config .prettierrc --check src/**/*",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w --sourceMap",
    "watch-node": "nodemon --inspect",
    "clean": "rm -rf ./node_modules && npm cache verify && rm ./package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PW486/express-ts-starter.git"
  },
  "author": "DONGGEON LIM <ooqwe486@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "celebrate": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.0",
    "express-jwt": "^5.3.1",
    "express-jwt-permissions": "^1.3.1",
    "helmet": "^3.18.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.17",
    "winston": "^3.2.1",
    "tsconfig-paths": "^3.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "0.0.42",
    "@types/helmet": "0.0.43",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/node": "^12.0.2",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "1.17.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  }
}
